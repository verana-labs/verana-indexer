# pnpm configuration for Verana Indexer
# This file configures pnpm behavior for the project

# Use exact versions for dependencies
save-exact=true

# Use pnpm store for better caching
store-dir=.pnpm-store

# Enable strict peer dependencies
strict-peer-dependencies=true

# Auto install peer deps when reasonable
auto-install-peers=true

audit=true

dedupe-peer-dependents=true

link-workspace-packages=true

prefer-workspace-packages=true

shamefully-hoist=false

@verana-labs:registry=https://registry.npmjs.org/
